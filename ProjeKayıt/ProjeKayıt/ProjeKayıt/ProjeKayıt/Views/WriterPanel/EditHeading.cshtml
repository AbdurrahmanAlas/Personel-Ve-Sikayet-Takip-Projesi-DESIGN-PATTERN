
@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<h2>Başlık Güncelleme Sayfası </h2>

@using (Html.BeginForm("EditHeading", "WriterPanel", FormMethod.Post))
{

<div class="form-group">


    @Html.HiddenFor(x => x.HeadingID)
    @Html.HiddenFor(x => x.HeadingDate)
    @Html.HiddenFor(x => x.WriterID)


    @Html.Label("Başlık Adı")
    @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })

    <br />
    @Html.Label("Tarih")
    @Html.TextBoxFor(x => x.HeadingDate, new { @class = "form-control" })

    <br />
    @Html.Label("Yazar")
    @Html.TextBoxFor(x => x.Writer.WriterName, new { @class = "form-control" })

    <br />
    @Html.Label("Mahalle /Açıklama")
    @Html.TextBoxFor(x => x.HeadingAdres, new { @class = "form-control" })

    <br />
    @Html.Label("Ada")
    @Html.TextBoxFor(x => x.HeadingAda, new { @class = "form-control" })

    <br />
    @Html.Label("PArsel")
    @Html.TextBoxFor(x => x.HeadingParsel, new { @class = "form-control" })

    <br />
   
    @Html.Label("Yazar")
    @Html.TextBoxFor(x => x.Writer.WriterID, new { @class = "form-control" })

    <br />
    @Html.Label("Kategori")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })

    <br />

    <br />


    <button class="btn btn-success">Güncelle</button>


</div>



}

