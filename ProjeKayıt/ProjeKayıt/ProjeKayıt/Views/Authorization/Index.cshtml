@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<table class="table table-bordered">

    <tr style="color:blue">
        <th style="color:blue"><BR /><BR />YETKİLENDİRME İŞLEMLERİ</th>
        <th>Kullanıcı Mail</th>


        <th>Yetki</th>
        <th>Status</th>
        <th>Pasif yap</th>
        <th>Yetkisini Değiştir</th>



    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.AdminID</th>
            <td>@item.AdminUserName</td>
            <td>@item.AdminRole</td>
            <td>Aktif</td>


            <td><a href="/Authorization/DeleteCategory/@item.AdminID" class="btn btn-danger">Pasif yap</a></td>
            <td><a href="/Authorization/EditAdmin/@item.AdminID" class="btn btn-warning">Yetkisini Değiştir</a></td>
            <td><a href="/WriterPanel/AllHeading/" class="btn btn-primary">Başlıklar</a></td>


        </tr>



    }
</table>
<br />
<a href="/Authorization/AddAdmin" class="btn btn-info">Yeni Admin Tanımla</a>

