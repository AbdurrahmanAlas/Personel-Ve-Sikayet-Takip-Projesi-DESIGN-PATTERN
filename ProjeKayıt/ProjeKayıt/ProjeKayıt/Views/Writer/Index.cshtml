@using EntityLayer.Concrete
@model List<Writer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- /.navbar -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-12">
                    <h1 style="color:black;margin-left:400px;"><b>MEMUR BİLGİLERİ </b></h1>
                    <br />
                    <a href="/Writer/AddWriter" class="btn btn-primary"> + Personel Ekle</a>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content bg-gradient-blue">
        <!-- Default box -->
        <div class="card bg-gradient-blue">
            <div class="card-body pb-0" style="border:ridge">
                <div class="row d-flex align-items-stretch bg-gradient-blue" >
                    @foreach (var item in Model)
                    {
                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch bg-gradient-blue" style="border:outset;border-color:#eac475;color:blue">
                            <div class="card bg-gradient-lightblue">
                                <div class="card-header text-muted border-bottom-0">
                                  @item.WriterTitle
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">
                                            <h2 class="lead"><b>@item.WriterName  @item.WriterSurName</b></h2>
                                            <p class="text-muted text-sm"><b>Hakkında: </b> @item.WriterAbout </p>
                                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> EMail:@item.WriterMail</li>
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Telefon </li>
                                            </ul>
                                        </div>
                                        <div class="col-5 text-center">

                                            <img src="~/Content/personel.png"   alt="" class="img-circle img-fluid"/> 
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">
                                        <a href="/WriterPanel/MyHeading/@item.WriterID" class="btn btn-sm bg-success" style="color:black">
                                            <i class="fas fa-comments"> Denetim Raporları</i>
                                        </a>
                                        <a href="/Writer/EditWriter/@item.WriterID" class="btn btn-sm btn-primary">
                                            <i class="fas fa-user"></i> Profil Düzenle
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</body>
</html>