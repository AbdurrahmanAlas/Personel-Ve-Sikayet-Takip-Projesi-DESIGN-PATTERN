@using EntityLayer.Concrete
@model List<Punishment>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<br />
<h3 style="margin-left:400px;color:black">  ARAÇLARA YAZILAN CEZA LİSTESİ </h3>
<br />
<div>
    <a href="/Ceza/AddCeza" class="btn btn-info"><i class="fas glyphicon-fast-backward"></i> ✚Yeni ceza gir</a>


    <a class="collapse-item" href="/PetrolRuhsat/Index">
        <i class="fas fa-fw fa-info  " style="color:blue"></i><b>İş Listesi</b>
    </a>

    <a href="/Ceza/HeadingReport" class="badge badge-warning" style="width:130px;height:40px;margin-left:10px;font-size:17px;">🔰  Excel, PDF </a>

